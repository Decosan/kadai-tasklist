

<ul class="media-list">
  <% tasks.each do |task|%>
    <li class="media">
      <div class="media-body">
        <div>
         <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
      <div>
        <p><%=task.status%> &gt: <%=task.content%></p>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Edit",edit_task_path(task), class: 'btn btn-success btn-xs'%>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
    </li>    
  <% end %>
  <%= paginate tasks %>
</ul>

